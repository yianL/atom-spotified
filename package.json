{
  "name": "atom-spotified",
  "main": "./src/main",
  "version": "0.2.1",
  "description": "Show the song currently playing in Spotify",
  "keywords": [
    "spotify",
    "music",
    "cover-art"
  ],
  "os": [
    "darwin"
  ],
  "repository": "https://github.com/yianL/atom-spotified",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0"
  },
  "dependencies": {
    "spotify-node-applescript": "^0.2.2"
  },
  "devDependencies": {
    "standard": "^6.0.8"
  },
  "configSchema": {
    "showSoundBar": {
      "type": "boolean",
      "default": true,
      "description": "Show sound bar animation"
    },
    "statusBarViewPosition": {
      "type": "string",
      "default": "right",
      "enum": ["right", "left"],
      "description": "The position of the status bar view"
    },
    "statusBarViewPriority": {
      "type": "integer",
      "default": 1000,
      "description": "Controls the position of the status bar view"
    }
  },
  "consumedServices": {
    "status-bar": {
      "versions": {
        ">=0.2.0": "consumeStatusBar"
      }
    }
  },
  "standard": {
    "globals": [
      "atom",
      "beforeEach",
      "describe",
      "expect",
      "fetch",
      "HTMLElement",
      "it",
      "jasmine",
      "runs",
      "spyOn",
      "waits",
      "waitsForPromise"
    ]
  }
}
