{
  "name": "atom-spotified",
  "main": "./src/main",
  "version": "0.8.2",
  "description": "Show the song currently playing in Spotify",
  "keywords": [
    "spotify",
    "music",
    "cover-art"
  ],
  "os": [
    "darwin"
  ],
  "repository": "https://github.com/yianL/atom-spotified",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "dom-listener": "^0.1.2",
    "etch": "^0.6.0",
    "applescript": "^1.0.0"
  },
  "devDependencies": {
    "standard": "^6.0.8"
  },
  "configSchema": {
    "mode": {
      "type": "string",
      "default": "Auto",
      "enum": [
        "Auto",
        "Tree",
        "StatusBar"
      ],
      "description": "*Reload required"
    },
    "showSoundBar": {
      "type": "boolean",
      "default": true,
      "description": "Show sound bar animation"
    },
    "statusBarViewPosition": {
      "type": "string",
      "default": "right",
      "enum": [
        "right",
        "left"
      ],
      "description": "The position of the status bar view"
    },
    "statusBarViewPriority": {
      "type": "integer",
      "default": 1000,
      "description": "Controls the position of the status bar view"
    }
  },
  "consumedServices": {
    "status-bar": {
      "versions": {
        ">=0.2.0": "consumeStatusBar"
      }
    }
  },
  "standard": {
    "globals": [
      "atom",
      "beforeEach",
      "describe",
      "expect",
      "fetch",
      "HTMLElement",
      "it",
      "jasmine",
      "runs",
      "spyOn",
      "waits",
      "waitsForPromise"
    ]
  }
}
